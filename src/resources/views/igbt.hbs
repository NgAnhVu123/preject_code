<div class="grid">
    <div class="grid-row"> 
        <div class="grid-column-2">
            <nav class="category">
                <h3 class="category-heading">
                    <i class="list-img ti-list"></i>Danh mục
                </h3>
                <ul class="category-list" >
                    <li class="category-item " ><!--category-item--active-->
                    <a href="/module" class="category-item-link"> Module</a>
                    </li>
                    <li class="category-item " >
                    <a href="/dongho" class="category-item-link"> Đồng hồ đo lường</a>
                    </li>
                    <li class="category-item " >
                    <a href="/matcd" class="category-item-link"> Mắt CD-Phụ kiện đầu CD</a>
                    </li>
                    <li class="category-item" >
                    <a href="/phantan" class="category-item-link"> Phân tần</a>
                    </li>
                    <li class="category-item" >
                    <a href="/transistors" class="category-item-link"> Transistors</a>
                    </li>
                    <li class="category-item" >
                    <a href="/mosfets" class="category-item-link"> Mosfets</a>
                    </li>
                    <li class="category-item" >
                    <a href="/tudien" class="category-item-link"> Tụ điện</a>
                    </li>
                    <li class="category-item" >
                    <a href="/dientro" class="category-item-link"> Điện trở</a>
                    </li>
                    <li class="category-item" >
                    <a href="/diode" class="category-item-link"> Diode</a>
                    </li>
                    <li class="category-item" >
                    <a href="/jfet" class="category-item-link"> Jfet</a>
                    </li>
                    <li class="category-item" >
                    <a href="/igbt" class="category-item-link"> IGBT</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="grid-column-10">
            <div class="home-head">Các sản phẩm IGBT</div>
            <div class="home-product">
                <div class="grid-row">
                    {{#each components}}
                    <div class="grid-column-2-4">
                        <div class="home-product-item">
                            <a href="/product/{{this.slug}}">
                                <div class="home-product-item-img" style="background-image: url({{this.img}});"></div>
                            </a>
                            <a href="/product/{{this.slug}}">
                                <h4 class="home-product-item-name">{{this.name}}</h4>
                            </a>
                            <div class="home-product-item-price">{{this.price}}</div>
                            <div class="add-to-cart-btn-wrap">
                                <button class=" add-to-cart-btn add-to-cart-btn-{{this.ton_tai}}" onclick="addToCartFunction(['{{this.name}}','{{this.price}}','{{this.type}}','{{this.img}}'])"><i class="ti-shopping-cart"></i>Mua hàng</button>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div> 
            </div>
        </div>
    </div> 
</div>
<script>
    var x=document.querySelectorAll('.add-to-cart-btn');
    for(i=0;i<x.length;i++){
    hobtn=document.querySelector('.add-to-cart-btn-khong');
    hobtn.outerHTML='<button class="btn add-to-cart-btn-no"><i class="ti-na"></i>  Hết hàng</button>'}
</script>